---
import BaseLayout from "../layouts/BaseLayout.astro";
import SEO from "../components/SEO.astro";
import JsonLd from "../components/JsonLd.astro";
import { softwareApplicationSchema } from "../lib/schemas";
import Card from "../components/starwind/card/Card.astro";
import CardContent from "../components/starwind/card/CardContent.astro";
import Button from "../components/starwind/button/Button.astro";
---

<BaseLayout>
  <SEO
    slot="head"
    title="About - Today's Park"
    description="Today's Park helps families discover and explore local parks by randomly picking your next adventure."
  >
    <JsonLd schema={softwareApplicationSchema} />
  </SEO>

  <header>
    <h1 class="title">About Today's Park</h1>
    <p class="subtitle">Making every day an adventure</p>
  </header>

  <main class="flex-1 flex flex-col gap-4">
    <!-- What is Today's Park -->
    <Card class="bg-white/10 backdrop-blur-xl border-white/15">
      <CardContent class="p-6">
        <h2 class="font-[Fraunces] text-xl font-semibold text-cream mb-3">What is Today's Park?</h2>
        <p class="text-mist leading-relaxed mb-4">
          Today's Park is a simple tool that helps families get outside more often.
          Instead of debating which park to visit or defaulting to the same spot every time,
          let us pick for you.
        </p>
        <p class="text-mist leading-relaxed">
          Add your favorite local parks to your list, hit the button, and discover where
          your next adventure awaits. Track your visits and make sure you're exploring
          all your neighborhood has to offer.
        </p>
      </CardContent>
    </Card>

    <!-- How it Works -->
    <Card class="bg-white/10 backdrop-blur-xl border-white/15">
      <CardContent class="p-6">
        <h2 class="font-[Fraunces] text-xl font-semibold text-cream mb-4">How It Works</h2>
        <div class="space-y-4">
          <div class="flex gap-4 items-start">
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold/20 text-gold font-[Fraunces] font-bold flex items-center justify-center">1</span>
            <div>
              <h3 class="font-semibold text-cream">Build Your List</h3>
              <p class="text-mist text-sm">Add parks from our recommendations or discover new ones nearby.</p>
            </div>
          </div>
          <div class="flex gap-4 items-start">
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold/20 text-gold font-[Fraunces] font-bold flex items-center justify-center">2</span>
            <div>
              <h3 class="font-semibold text-cream">Pick a Park</h3>
              <p class="text-mist text-sm">Hit the button and we'll randomly select from your list (no repeats in the last 5 picks).</p>
            </div>
          </div>
          <div class="flex gap-4 items-start">
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold/20 text-gold font-[Fraunces] font-bold flex items-center justify-center">3</span>
            <div>
              <h3 class="font-semibold text-cream">Go Explore</h3>
              <p class="text-mist text-sm">Get directions, see travel time, and head out on your adventure.</p>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- CTA -->
    <Card class="bg-gold/10 backdrop-blur-xl border-gold/20">
      <CardContent class="p-6 text-center">
        <h2 class="font-[Fraunces] text-xl font-semibold text-cream mb-2">Ready to start exploring?</h2>
        <p class="text-mist mb-4">Create your free account and add your first parks.</p>
        <Button as="a" href="/sign-up" variant="primary" size="lg">
          Get Started
        </Button>
      </CardContent>
    </Card>
  </main>

  <footer class="mt-8 pt-4 border-t border-white/10">
    <nav class="flex justify-center gap-6 text-sm text-mist">
      <a href="/" class="hover:text-cream transition-colors">Home</a>
      <a href="/help" class="hover:text-cream transition-colors">Help</a>
      <a href="/legal/terms" class="hover:text-cream transition-colors">Terms</a>
      <a href="/legal/privacy" class="hover:text-cream transition-colors">Privacy</a>
    </nav>
  </footer>
</BaseLayout>
